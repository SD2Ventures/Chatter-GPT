{
  "version": 2,
  "functions": {
    "api/*.js": {
      "runtime": "nodejs20.x"
    }
  },
  "routes": [
    {
      "src": "/api/top",
      "dest": "/api/top.js"
    },
    {
      "src": "/api/explain",
      "dest": "/api/explain.js"
    },
    {
      "src": "/api/admin/init",
      "dest": "/api/admin/init.js"
    },
    {
      "src": "/api/cron/reddit",
      "dest": "/api/cron/reddit.js"
    },
    {
      "src": "/api/cron/sec-latest",
      "dest": "/api/cron/sec-latest.js"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/reddit?domain=stocks",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/cron/reddit?domain=crypto",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/cron/sec-latest",
      "schedule": "*/5 * * * *"
    }
  ]
}